<!DOCTYPE html>
<html lang="en">
<head>
    @model NguyenNhutDuy_2122110447.Models.NhanVien
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
    <!-- Link Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .profile-card {
            max-width: 600px;
            margin: 50px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .profile-header {
            text-align: center;
            margin-bottom: 20px;
        }

            .profile-header h2 {
                margin: 0;
                color: #343a40;
            }

            .profile-header p {
                margin: 0;
                color: #6c757d;
            }

        .profile-footer {
            text-align: center;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="profile-card">
        <div class="profile-header">
            <h2>Thông Tin Nhân Viên</h2>
            <p>@Model.TenNhanVien</p>
        </div>
        <dl class="row">
            <dt class="col-sm-4">Tên Nhân Viên:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.TenNhanVien)</dd>

            <dt class="col-sm-4">Thường Trú:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.ThuongTru)</dd>

            <dt class="col-sm-4">Số Điện Thoại:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Sdt)</dd>

            <dt class="col-sm-4">Gmail:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Gmail)</dd>

            <dt class="col-sm-4">Khối:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Khoi)</dd>

            <dt class="col-sm-4">Lương:</dt>
            <dd class="col-sm-8">@String.Format("{0:0,0} VNĐ", Model.Luong)</dd>
        </dl>
        <div class="profile-footer">
            <a href="@Url.Action("Edit", new { id = Model.IdNhanVien })" class="btn btn-primary">Chỉnh Sửa</a>
        </div>
    </div>
    <!-- Link Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
