@model NguyenNhutDuy_2122110447.Models.DonHang



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Detail</title>
</head>
<body>
    <div>
        <dl class="dl-horizontal">
            <dt>
                Địa chỉ: 
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.DiaChi)
            </dd>
    
            <dt>
                Tên
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.Ten)
            </dd>
    
            <dt>
                Loại
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.Loai)
            </dd>
    
            <dt>
               Cân nặng(kg)
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.CanNang)
            </dd>
    
            <dt>
                Tên người nhận
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.TenNguoiNhan)
            </dd>
    
            <dt>
               Sdt
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.Sdt)
            </dd>
    
            <dt>
                Giá trị đơn hàng
            </dt>
    
            <dd>
                @String.Format("{0:0,0}", Model.GiaTriDonHang)
            </dd>
    
            <dt>
                Tổng tiền
            </dt>
    
            <dd>
                @String.Format("{0:0,0}", Model.TongTien)
            </dd>
    
            <dt>
                Ghi chú 
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.GhiChu)
            </dd>
    
        </dl>
    </div>
    <p>
        @Html.ActionLink("Sửa", "Edit", new { id = Model.Id }, new { @style = "text-decoration: none;" }) |
        @Html.ActionLink("Quay về", "Index", null, new { @style = "text-decoration: none;" })
    </p>
</body>
</html>
